<%- include('bootstrap5-header') %>

<div class="col mt-5 ">
    <h2 class="navbar-brand mx-4">Database</h2>
    <hr>
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Roll no.</th>
            <th scope="col">Student Name</th>
            <th scope="col">Father's Name</th>
            <th scope="col">Class</th>
            <th scope="col">Age</th>
            <th scope="col">Gender</th>
            <th scope="col">Email</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(element => { %>
            <tr >
            <th id="rollno" scope="row"><%= element.rollno %></th>
            <td id="name"><%=element.fname %></td>
            <td id="fathername"><%=element.fatherName %></td>
            <td id="age"><%=element.age %></td>
            <td id="grade"><%=element.class %></td>
            <td id="gender"><%=element.gender %></td>
            <td id="email"><%= element.username %></td>
            <td style="display: none;" id="about"><%=element.about %></td>
            <td style="display: none;" id="dob"><%=element.dob %></td>
            <td style="display: none;" id="designation"><%=element.designation %></td>
            <td style="display: none;" id="address"><%=element.address %></td>
            <td><a href="/database/student/<%= element.cnic %>/aboutMe/<%= element.username %>">More</a></td>
          </tr>
        <%  }); %>
        </tbody>
      </table>
</div>
<div class="col col-lg-3 px-2" id="studentInfo" style="display: none;">
  <div class="row ">
    <div class="col">
      <img class="logo rounded-circle"  src="img/result.jpg" alt="">
      <h3 class="align mt-3" id="studentname"></h3>
      <h6 class="align" id="sdesignation">Student</h6>
    </div>
  </div>
  <div class="row pt-5">
    <h3 >About</h3>
    <p id="sabout">Lorem ipsum dolor sit, amet consectetur adipisicing elit. Officia, velit deserunt, nostrum quidem expedita doloribus aperiam vitae ipsum vero ipsam, fugiat libero animi facilis! Recusandae saepe aspernatur quidem vel molestias!</p>
  </div>
  <div class="row pt-4">
    <div class="col">
      <h4 >Age</h4>
      <p id="sage">14</p>
    </div>
    <div class="col">
      <h4>Gendar</h4>
      <p id="sgender">Male</p>
    </div>
  </div>
  <div class="row pt-4">
    <div class="col">
      <h4>Date Of Birth</h4>
      <p id="sdob">18 feb 2004</p>
    </div>
    <div class="col ">
      <h4>Address</h4>
      <p id="saddress">Swabi</p>
    </div>
  </div>
</div>

    <%- include('bootstrap5-footer') %>